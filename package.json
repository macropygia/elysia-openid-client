{
  "name": "elysia-openid-client",
  "version": "0.1.4",
  "description": "OpenID Connect client plugin for ElysiaJS",
  "keywords": ["elysia", "elysiajs", "oidc", "openid", "OpenID Connect", "bun"],
  "homepage": "https://macropygia.github.io/elysia-openid-client/",
  "bugs": "https://github.com/macropygia/elysia-openid-client/discussions/new/choose",
  "license": "MIT",
  "author": "macropygia",
  "files": [
    "**/*.ts",
    "tsconfig.json",
    "!**/*.test.ts",
    "!**/*.config.ts",
    "!**/.*",
    "!**/__*__"
  ],
  "type": "module",
  "module": "index.ts",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/macropygia/elysia-openid-client"
  },
  "scripts": {
    "check": "biome check .",
    "check:apply": "biome check --apply .",
    "check:unsafe": "biome check --apply-unsafe .",
    "type-check": "tsc --noEmit",
    "build": "bun ./__scripts__/build.ts && bun run dts",
    "dts": "tsup ./index.ts --dts-only --format esm --out-dir .",
    "docs": "bun ./__scripts__/docs.ts",
    "test": "bun test --coverage",
    "prepare": "simple-git-hooks"
  },
  "dependencies": { "openid-client": "^5.6.5" },
  "peerDependencies": {
    "elysia": "^1.0.13",
    "ioredis": "^5.4.1",
    "lokijs": "^1.5.12",
    "lowdb": "^7.0.1",
    "pino": "^8.20.0",
    "pino-pretty": "^11.0.0",
    "typescript": "^5.4.5"
  },
  "peerDependenciesMeta": {
    "ioredis": { "optional": true },
    "lokijs": { "optional": true },
    "pino": { "optional": true },
    "pino-pretty": { "optional": true },
    "lowdb": { "optional": true }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.0",
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/bun": "latest",
    "@types/lokijs": "^1.5.14",
    "@types/set-cookie-parser": "^2.4.7",
    "elysia": "^1.0.13",
    "ioredis": "^5.4.1",
    "jose": "^5.2.4",
    "lint-staged": "^15.2.2",
    "lokijs": "^1.5.12",
    "lowdb": "^7.0.1",
    "pino": "^8.20.0",
    "pino-pretty": "^11.0.0",
    "set-cookie-parser": "^2.6.0",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.0.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  },
  "engines": { "bun": "^1.0.0" },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged",
    "commit-msg": "bunx commitlint -e"
  },
  "lint-staged": { "*.{ts,json}": "biome check --apply" }
}
