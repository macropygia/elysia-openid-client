{
  "name": "elysia-openid-client",
  "version": "0.1.11",
  "description": "OpenID Connect client plugin for ElysiaJS",
  "keywords": ["elysia", "elysiajs", "oidc", "openid", "OpenID Connect", "bun"],
  "homepage": "https://macropygia.github.io/elysia-openid-client/",
  "bugs": "https://github.com/macropygia/elysia-openid-client/discussions/new/choose",
  "repository": {
    "type": "git",
    "url": "https://github.com/macropygia/elysia-openid-client"
  },
  "license": "MIT",
  "author": "macropygia",
  "files": [
    "src",
    "tsconfig.json",
    "!src/dataAdapters/index.ts",
    "!**/*.test.ts",
    "!**/.*",
    "!**/__*__"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./config": "./src/config/index.ts",
    "./*": "./src/*.ts",
    "./package.json": "./package.json"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:unsafe": "biome check --write --unsafe .",
    "mock:rebuild": "bun ./__scripts__/rebuildMockDatabases.ts",
    "build": "bun ./__scripts__/build.ts && bun run dts",
    "dts": "tsup ./src/index.ts --dts-only --format esm --out-dir ./src",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "openid-client": "^5.7.0"
  },
  "peerDependencies": {
    "elysia": "^1.0.23",
    "ioredis": "^5.4.1",
    "lokijs": "^1.5.12",
    "lowdb": "^7.0.1",
    "pino": "^9.2.0",
    "pino-pretty": "^11.2.1",
    "typescript": "^5.4.5"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    },
    "lokijs": {
      "optional": true
    },
    "pino": {
      "optional": true
    },
    "pino-pretty": {
      "optional": true
    },
    "lowdb": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/bun": "latest",
    "@types/lokijs": "^1.5.14",
    "@types/set-cookie-parser": "^2.4.10",
    "elysia": "^1.1.24",
    "ioredis": "^5.4.1",
    "jose": "^5.9.6",
    "lint-staged": "^15.2.10",
    "lokijs": "^1.5.12",
    "lowdb": "^7.0.1",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "set-cookie-parser": "^2.7.1",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "engines": {
    "bun": "^1.1.10"
  },
  "packageManager": "bun@1.1.34",
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged",
    "commit-msg": "bunx commitlint -e"
  },
  "lint-staged": {
    "*.{ts,json}": "biome check --write"
  },
  "publishConfig": {
    "provenance": true
  }
}
